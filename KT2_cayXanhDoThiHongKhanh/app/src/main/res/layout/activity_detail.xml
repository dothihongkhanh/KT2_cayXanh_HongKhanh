<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FF99">
    <Button
        android:id="@+id/buttonBackDetail"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="10dp"
        android:background="@drawable/ic_baseline_arrow_back_24"/>
    <TextView
        android:id="@+id/textviewThongTinCT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông tin chi tiết"
        android:textSize="25sp"
        android:textColor="@color/purple_700"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="70dp"
        android:layout_toRightOf="@id/buttonBackDetail"/>

    <ImageView
        android:id="@+id/imageViewPicture_dt"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@id/textviewThongTinCT"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/conduonghoaphuonghaugiang"
        android:background="@drawable/boder_edittext" />

    <TextView
        android:id="@+id/textviewName_dt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewPicture_dt"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="Phượng đỏ"
        android:textColor="@color/purple_700"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:textSize="20sp"
        android:textColor="@color/purple_700"
        android:layout_below="@id/textviewName_dt"
        android:id="@+id/textviewNameProvince_dt"
        android:layout_centerHorizontal="true"
        android:text="Hoa phượng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="20sp"
        android:textColor="@color/purple_700"
        android:layout_below="@id/textviewNameProvince_dt"
        android:id="@+id/textviewPrice_dt"
        android:layout_centerHorizontal="true"
        android:text="Hoa màu đỏ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_below="@id/textviewPrice_dt"
        android:id="@+id/textviewDescribe_dt"
        android:layout_centerHorizontal="true"
        android:text="Phượng vỹ được tìm thấy lần đầu tiên tại Madagascar. Ngoài cái tên phượng hay phượng vỹ, phượng còn được biết đến với các tên gọi khác như xoan tây, điệp tây. Tiếng Anh thông dụng các tên gọi là: Flamboyant, Royal poinciana và Mohur tree. Khoa học gọi là Delonix regia Raf."
        android:layout_width="wrap_content"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"/>
</RelativeLayout>